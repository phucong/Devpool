@model ChessResult.Site.ViewModels.Admin.TournamentsViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="text-right">
    <button class="btn btn-primary">Add</button>
</div>
<div class="table text-center">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>FED</th>
                <th>flag</th>
                <th>LastUpdate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Tournaments)
            {
                <tr>
                    <td>@Html.ActionLink(@item.Name, "details/" + @item.Id)</td>
                    <td>@item.Organize</td>
                    <td><img src="https://www.countryflags.io/@(item.FederationCode)/flat/32.png"></td>
                    <td>@item.LastUpdate</td>
                </tr>
            }
        </tbody>
    </table>
</div>

